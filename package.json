{
  "name": "ignition",
  "version": "1.0.0",
  "description": "Autonomous Token Launch Engine for Solana - Transform every new X follower into an on-chain token launch",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "backfill": "tsx scripts/backfill.ts",
    "retry-failed": "tsx scripts/retry-failed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:scanner": "vitest run --grep scanner",
    "test:launcher": "vitest run --grep launcher",
    "test:db": "vitest run --grep db",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "solana",
    "pump.fun",
    "token",
    "launch",
    "twitter",
    "x",
    "automation",
    "blockchain",
    "web3",
    "cryptocurrency"
  ],
  "author": "Ignition Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@solana/web3.js": "^1.91.0",
    "@the-convocation/twitter-scraper": "^0.9.0",
    "bs58": "^5.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}
